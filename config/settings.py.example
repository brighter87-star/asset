"""
Settings template for asset management system.
Copy this file to settings.py and fill in your actual values.

DO NOT commit settings.py to git!
"""

from pydantic_settings import BaseSettings


class Settings(BaseSettings):
    # Database
    DB_HOST: str = "localhost"
    DB_PORT: int = 3306
    DB_USER: str = "your_db_user"
    DB_PASSWORD: str = "your_db_password"
    DB_NAME: str = "asset"
    
    # Kiwoom API
    BASE_URL: str = "https://your-kiwoom-api-url"
    APP_KEY: str = "your_app_key"
    SECRET_KEY: str = "your_secret_key"
    ACNT_API_ID: str = "your_account_api_id"

    class Config:
        env_file = ".env"
        case_sensitive = True

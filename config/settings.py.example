"""
Settings template for asset management system.
Copy this file to settings.py and fill in your actual values.

DO NOT commit settings.py to git!
"""

import os
from pathlib import Path

from dotenv import load_dotenv
from pydantic_settings import BaseSettings

BASE_DIR = Path(__file__).resolve().parent.parent
load_dotenv(BASE_DIR / ".env")


class Settings(BaseSettings):
    # Kiwoom API credentials
    APP_KEY: str
    SECRET_KEY: str
    BASE_URL: str
    SOCKET_URL: str = ""  # Optional
    ACNT_API_ID: str

    # Database configuration (asset DB)
    DB_HOST: str = "localhost"
    DB_USER: str = "your_db_user"
    DB_PASSWORD: str = "your_db_password"
    DB_NAME: str = "asset"

    model_config = {
        "env_file": ".env",
        "env_file_encoding": "utf-8",
        "extra": "ignore",
    }
